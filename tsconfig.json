{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]

  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
